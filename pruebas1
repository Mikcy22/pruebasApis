<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabla de Datos de API</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Tabla de Datos de API</h2>
    <?php
    // URL de la API
    $url = 'https://apimocha.com/pruebasapis12/posts';

    // Obtener los datos de la API
    $datos_json = file_get_contents($url);

    // Decodificar los datos JSON
    $datos = json_decode($datos_json, true);

    // Verificar si se obtuvieron los datos correctamente
    if ($datos && is_array($datos)) {
        echo '<table>';
        echo '<tr><th>ID</th><th>TÃ­tulo</th><th>Contenido</th></tr>';
        foreach ($datos as $dato) {
            echo '<tr>';
            echo '<td>' . $dato['id'] . '</td>';
            echo '<td>' . $dato['title'] . '</td>';
            echo '</tr>';
        }
        echo '</table>';
    } else {
        echo 'No se pudieron obtener los datos de la API.';
    }
    ?>
</body>
</html>
